@{
}
<h1>Edycja zdjęcia</h1>
<form asp-controller="Photo" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="Wykonano">Wykonano</label>
        <input class="form-control" asp-for="Wykonano" /><br />
        <span class="text-danger" asp-validation-for="Wykonano"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Opis">Opis</label>
        <input class="form-control" asp-for="Opis" /><br />
        <span class="text-danger" asp-validation-for="Opis"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nazwa">Nazwa zdjęcia</label>
        <input class="form-control" asp-for="Nazwa" /><br />
        <span class="text-danger" asp-validation-for="Nazwa"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Autor">Imię i Nazwisko</label>
        <input class="form-control" asp-for="Autor" /><br />
        <span class="text-danger" asp-validation-for="Autor"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rozdzielczość">Rozdzielczość</label>
        <input class="form-control" asp-for="Rozdzielczość" /><br />
        <span class="text-danger" asp-validation-for="Rozdzielczość"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Format">Format</label>
        <input class="form-control" asp-for="Format" /><br />
        <span class="text-danger" asp-validation-for="Format"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Aktualizuj</button>
    </div>
</form>