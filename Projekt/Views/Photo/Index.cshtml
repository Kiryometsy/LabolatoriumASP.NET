@model Dictionary<int, Photo>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista zdjęć</h1>
<div>
    <table class="table">
        <tr>
            <th>
                Data
            </th>
            <th>
                Nazwa
            </th>
            <th>
                Autor
            </th>
            <th>
                Akcje
                <a class="btn btn-primary" asp-controller="Photo" asp-action="Create">Nowy</a>
            </th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Value.Wykonano
                </td>
                <td>
                    @item.Value.Nazwa
                </td>
                <td>
                    @item.Value.Autor
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Photo" asp-action="Update" asp-route-id="@item.Value.Id">Edycja</a>
                    <a class="btn btn-outline-info" asp-controller="Photo" asp-action="Details" asp-route-id="@item.Value.Id">Szczegóły</a>
                    <a class="btn btn-outline-danger" asp-controller="Photo" asp-action="Delete" asp-route-id="@item.Value.Id">Usuń</a>
                </td>
            </tr>
        }
    </table>
</div>